package chopLifter;

import java.awt.Graphics;
import java.awt.Image;

public class Mountain {
	private double x, y;
	private double dx, width, height;
	private Image img;

	Mountain(Image img, double x) {
		this.img = img;
		init(x);
	}

	void init(double x) {
		this.x = x;
		y = Util.rand(ChopLifter.FRAME_H / 5 * 4, ChopLifter.FRAME_H / 5 * 4 + 50);
		width = Util.rand(300, 500);
		height = width / 300 * 237;
		dx = width / 500;
	}

	void move() {
	}

	void draw(Graphics g) {
		g.drawImage(img, (int) (x - width / 2), (int) (y - height / 2), (int) width, (int) height, null);
	}
}
